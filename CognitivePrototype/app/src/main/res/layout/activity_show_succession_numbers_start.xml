<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.syre.cognitiveprototype.MainActivity"
    android:background="#03A9F4">

    <TextView android:text="@string/show_numbers_description" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/show_numbers_description"
        android:textColor="#e5e5e5"
        android:phoneNumber="false"
        android:singleLine="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="135dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        android:id="@+id/show_numbers_screen_start_button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="53dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Good Luck!"
        android:id="@+id/textView"
        android:layout_above="@+id/show_numbers_screen_start_button"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="59dp"
        android:textColor="#e5e5e5" />

</RelativeLayout>
